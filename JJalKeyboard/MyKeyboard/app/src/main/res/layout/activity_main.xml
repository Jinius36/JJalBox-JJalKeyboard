<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- 상단 헤더 (기존 include 유지) -->
    <include
            android:id="@+id/setting_header"
            layout="@layout/setting_header" />

    <!-- 드롭다운 라벨 -->
    <TextView
            android:id="@+id/tvProviderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 생성 모드"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/setting_header"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- 모델 선택 드롭다운 -->
    <Spinner
            android:id="@+id/spinnerProvider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvProviderLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이미지 첨부 -->
    <Button
            android:id="@+id/btnPickImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이미지 첨부"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerProvider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 선택된 파일명/썸네일 안내 -->
    <TextView
            android:id="@+id/tvSelected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="선택된 이미지 없음"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnPickImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 프롬프트 입력 -->
    <EditText
            android:id="@+id/etPrompt"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:hint="생성하고 싶은 이미지에 대한 설명을 입력하세요"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvSelected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이미지 생성 버튼 -->
    <Button
            android:id="@+id/btnGenerate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이미지 생성"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/etPrompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 로딩 표시 -->
    <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnGenerate"
            app:layout_constraintBottom_toTopOf="@+id/tvResultLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    <!-- 결과 레이블 -->
    <TextView
            android:id="@+id/tvResultLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생성 결과"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnGenerate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

    <!-- 결과 이미지 미리보기 -->
    <ImageView
            android:id="@+id/ivResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/darker_gray"
            android:contentDescription="생성 결과 이미지"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvResultLabel"
            app:layout_constraintBottom_toTopOf="@id/btnDownload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 다운로드 버튼 -->
    <Button
            android:id="@+id/btnDownload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="다운로드"
            android:enabled="false"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
