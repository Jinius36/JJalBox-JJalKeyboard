<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/keyboardBackground">


    <!-- 2) 검색 모드용 컨테이너 (초기엔 숨김) -->
    <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="4dp">

        <!-- TextView 를 입력창처럼 사용 -->
        <TextView
                android:id="@+id/tv_search_query"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:hint="어떤 짤을 찾아볼까요?"
                android:background="@drawable/shape_search_edit"/>

        <!-- 삭제 아이콘 -->
        <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clear_24dp"
                android:background="@android:color/transparent"
                android:contentDescription="지우기"/>

        <!-- 검색 아이콘 -->
        <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search_24dp"
                android:background="@android:color/transparent"
                android:contentDescription="검색"/>
    </LinearLayout>

    <!-- 1) 토글 버튼 -->
    <Button
            android:id="@+id/btnJjalSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="짤 검색!" />

    <!-- 3) 기존 키보드 영역 -->
    <FrameLayout
            android:id="@+id/keyboard_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>